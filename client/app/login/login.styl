.Login
  display: flex;
  min-height: calc(100vh - 251px);
  justify-content: center;
  align-items: center;
  &-button
    font-weight: 600
    padding: 0 16px
  &-formRecover
    margin: 60px 0 5px 0
    font-weight: 500
  &-formBottom
    display: block
    margin-top: 7px
    font-weight: 500
  &-formTitle
    margin: 0
    font-weight: 500
    font-size: 25px
  &-formLink
    padding-left: 10px
  &-formRecover>a:link, .Login-formLink:link
    text-decoration: none
.Padding-sides
  padding: 0
.Form-padding
  padding: 50px 45px 35px 40px
  border-radius: 5px
.fa-ambulance
  padding-right: 10px
  font-size: 25px
@media screen and (max-width:550px)
  .Login-formBottom, .Login-formRecover
    text-align: center
  .Login-formLink
    display: block
    padding: 0
    margin-top: 7px